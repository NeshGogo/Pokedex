@model Pokedex.Models.Region

@{
    string accion = string.Empty;
    if (Model == null)
    {
        ViewData["Title"] = "Crear";
        accion = "Create";
    }
    else
    {
         ViewData["Title"] = "Actualizar";
        accion = "Edit";
    }
}

    <h1>@ViewData["Title"] Region.</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@accion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model != null)
            {
                <input type="hidden" asp-for="RegionId" />
            }

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Colors" class="control-label"></label>
                <select class="form-control" asp-for="Colors" asp-items="@Html.GetEnumSelectList<ColorsEnum>()"></select>
                <span asp-validation-for="Colors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewBag.Title" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="nav-item text-black-50" asp-action="Index">Volver al listado...</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
