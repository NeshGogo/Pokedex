@model IEnumerable<Pokedex.Models.Skill>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de las habilidades</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear</a>
</p>
<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.SkillId">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.SkillId">Detalle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SkillId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
